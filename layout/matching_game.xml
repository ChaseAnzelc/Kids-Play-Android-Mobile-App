<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/title_background2">



    <TableLayout
        android:layout_marginTop="100dp"
        android:id="@+id/matchingGameBoard"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:columnCount="4"
        android:padding="8dp"
        android:rowCount="4"
        android:weightSum="3"
        android:layout_weight="5"
        android:background="@null"
        >

        <TableRow android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />


        </TableRow>

        <TableRow android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

        </TableRow>

        <TableRow android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/button9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

        </TableRow>

        <TableRow android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/button13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button15"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

            <ImageView
                android:id="@+id/button16"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:src="@drawable/door_closed" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       >

    <Chronometer
        android:id="@+id/chronometer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="%s"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"/>

        <TextView
            android:id="@+id/door_clicked_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 doors clicked"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_weight="2"
            />

    </LinearLayout>



</LinearLayout>
